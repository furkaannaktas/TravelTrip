<div class="content-form">
    <h3>Yorumlarınızı Bizimle Paylaşın</h3>
    <form method="post" id="yorumForm">
        <input type="hidden" name="Blogid" value="@ViewBag.deger" />
        <input type="text" placeholder="Kullanıcı Adı" name="KullaniciAdi" required />
        <input type="text" placeholder="Mail Adresi" name="Mail" required />
        <textarea placeholder="Yorum" name="Yorum"></textarea>
        <input type="submit" value="GÖNDER" />
    </form>
</div>

<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
<script>
    document.getElementById('yorumForm').addEventListener('submit', function (event) {
        event.preventDefault();  // Formun normalde gönderilmesini engelle

        // SweetAlert ile başarı mesajı
        Swal.fire({
            title: 'Başarılı!',
            text: 'Yorumunuz başarıyla gönderildi.',
            icon: 'success',
            confirmButtonText: 'Tamam',
            confirmButtonColor: '#007bff',
        }).then((result) => {
            if (result.isConfirmed) {
                // SweetAlert onaylandığında formu gönder
                document.getElementById('yorumForm').submit();
            }
        });
    });
</script>
