@model TravelTripProje.Models.Siniflar.Yorumlar
@{
    ViewBag.Title = "YorumGetir";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="container mt-5">
    <h2 class="text-center mb-4" style="font-size: 32px; font-weight: bold; color: #007bff; text-shadow: 1px 1px 3px rgba(0, 123, 255, 0.3);">
        Yorum Güncelleme Sayfası
    </h2>
    <div class="card shadow-lg p-4">
        @using (Html.BeginForm("YorumGuncelle", "Admin", FormMethod.Post))
        {
            <div class="mb-3">
                @Html.LabelFor(x => x.ID, "ID", new { @class = "form-label", style = "font-weight: bold; color: #333;" })
                @Html.TextBoxFor(x => x.ID, new { @class = "form-control", placeholder = "Yorum ID'sini buraya yazınız...", @readonly = "readonly" })
            </div>
            <div class="mb-3">
                @Html.LabelFor(x => x.KullaniciAdi, "KullanıcıAdı", new { @class = "form-label", style = "font-weight: bold; color: #333;" })
                @Html.TextBoxFor(x => x.KullaniciAdi, new { @class = "form-control", placeholder = "Kullanıcı Adını buraya yazınız..." })
            </div>
            <div class="mb-3">
                @Html.LabelFor(x => x.Mail, "Mail", new { @class = "form-label", style = "font-weight: bold; color: #333;" })
                @Html.TextBoxFor(x => x.Mail, new { @class = "form-control", placeholder = "Maili buraya yazınız..." })
            </div>
            <div class="mb-3">
                @Html.LabelFor(x => x.Yorum, "Yorum", new { @class = "form-label", style = "font-weight: bold; color: #333;" })
                @Html.TextAreaFor(x => x.Yorum, new { @class = "form-control", rows = "5", placeholder = "Yorumu buraya yazınız..." })
            </div>
            <button type="submit" class="btn btn-primary btn-lg w-100" style="background-color: #007bff; border: none; color: white; font-size: 18px; padding: 12px; transition: background-color 0.3s ease;">
                Güncelle
            </button>
        }
    </div>
</div>


